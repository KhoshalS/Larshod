<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <RelativeLayout
            android:id="@+id/womenlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:background="@color/color1"
            >
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_width="200dp"

                android:layout_height="match_parent"
                android:src="@drawable/cat_wome_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ښځینه لارښوني"
                android:fontFamily="@font/helicomptino75"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="40dp"/>



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/couplelayout"
            android:background="@color/color2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="onClick"
            android:layout_weight="1">

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:src="@drawable/cat_couple_img"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="کورنۍ لارښوني"
                android:fontFamily="@font/helicomptino75"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_centerVertical="false"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/menlayout"
            android:background="@color/color3"
            android:layout_width="match_parent"
            android:onClick="onClick"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_width="250dp"

                android:layout_height="match_parent"
                android:src="@drawable/cat_men_img"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نارینه لارښوني"
                android:fontFamily="@font/helicomptino75"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="90dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/telegramText"
                    android:onClick="onClick"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/helicomptino45"
                    android:layout_marginRight="10dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/color3"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ټلیګرام"
                        android:fontFamily="@font/helicomptino45"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="90dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreAPPText"
                    android:onClick="onClick"
                    android:fontFamily="@font/helicomptino45"
                    android:layout_marginEnd="20dp"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="7dp"
                    app:cardBackgroundColor="@color/color3"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="نور کاریالونه"
                        android:fontFamily="@font/helicomptino45"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_centerVertical="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_width="90dp"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/about_us"
                    android:onClick="onClick"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/helicomptino45"
                    android:layout_marginLeft="10dp"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/color3"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="زموږ په اړه"
                        android:fontFamily="@font/helicomptino45"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>




        </RelativeLayout>


    </LinearLayout>






</LinearLayout>