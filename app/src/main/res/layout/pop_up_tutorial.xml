<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/backgroundTransparent"
    android:id="@+id/popuplayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/popUpContainer_back"
        android:layout_marginBottom="10dp"
        android:layout_width="300dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/popHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_us_describtion"
            android:fontFamily="@font/helicomptino45"
            android:gravity="center"
            android:padding="3sp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:clickable="true"
                android:id="@+id/about_telegram"
                android:layout_width="40dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_about_telegram"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/about_facebook"
                android:layout_width="40dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_about_facebook"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/about_twitter"
                android:layout_width="40dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_twitter"/>

            <ImageView
                android:clickable="true"
                android:id="@+id/about_youtube"
                android:layout_width="40dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_about_youtube"/>


            <ImageView
                android:clickable="true"
                android:id="@+id/about_playstore"
                android:layout_width="40dp"
                android:layout_margin="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_about_playstore"/>

        </LinearLayout>



                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="سمده"
                        android:fontFamily="@font/helicomptino45"
                        android:id="@+id/no_btn"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:background="@drawable/continue_btn_background"
                        android:layout_marginBottom="5dp"
                        />










    </LinearLayout>



</LinearLayout>